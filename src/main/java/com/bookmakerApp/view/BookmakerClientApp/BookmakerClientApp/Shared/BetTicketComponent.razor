@using BookmakerClientApp.Data.Model

<div class="grid-container">
    <div class="item1">Data zawarcia: @BetTicketDto.Date</div>
    <div class="item2">Ilość zdarzeń na kuponie: @BetTicketDto.Events.Count</div>
    <div class="item3">
        Wynik: @BetTicketDto.Success
        @if (@BetTicketDto.Success == null)
        {
            <span class="dot-black"></span>
        }
        else if (@BetTicketDto.Success == true)
        {
            <span class="dot-green"></span>
        }
        else if (@BetTicketDto.Success == false)
        {
            <span class="dot-red"></span>
        }
    </div>
    <div class="item3">Wkład: @BetTicketDto.Deposit</div>
    <div class="item3">Kurs całkowity: @BetTicketDto.TotalOdds</div>
    <div class="item3">Wygrana: @BetTicketDto.ToWin</div>
</div>


@code {
    [Parameter]
    public BetTicketDto BetTicketDto { get; set; }

    /*
