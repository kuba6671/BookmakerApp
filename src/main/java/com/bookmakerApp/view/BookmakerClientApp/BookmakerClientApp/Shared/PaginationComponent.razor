<nav aria-label="Page navigation">
	<ul class="pagination">
		@for (int i = 1; i <= numberOfPages; ++i)
		{
			int pageNumber = i - 1;
			@if (currentPageNumber == pageNumber)
			{
				<li class="page-item active">
					<a class="page-link" @onclick="() => InvokeChangeCurrentPageNumber(pageNumber)">
						@i
					</a>
				</li>
			}
			else
			{
				<li class="page-item">
					<a class="page-link" @onclick="() => InvokeChangeCurrentPageNumber(pageNumber)">
						@i
					</a>
				</li>
			}
		}
	</ul>
</nav>

@code {
	[Parameter]
	public EventCallback<int> ChangeCurrentPageNumber { get; set; }
	[Parameter]
	public int numberOfPages { get; set; }
	[Parameter]
	public int currentPageNumber { get; set; }

	private async Task InvokeChangeCurrentPageNumber(int pageNumber)
	{
		await ChangeCurrentPageNumber.InvokeAsync(pageNumber);
	}
}
